<h3>New Comment</h3>
<form action="<%= user_comments_url %>" method="post">
    <%= auth_token %>
    <label for="text">Comment</label>
    <textarea name="comment" id="text"></textarea>
    <input type="hidden" name="user_id" value="<%= user_id %>">
    <input type="submit" value="Save Comment">
</form>