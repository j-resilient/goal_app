<main>
    <h2>New Goal</h2>

    <% if flash.now[:errors] %>
        <% flash.now[:errors].each do |e| %>
            <p><%= e %></p>
        <% end %>
    <% end %>

    <form action="<%= goals_url %>" method="post">
        <%= auth_token %>
        
        <label for="title">Title: </label>
        <input type="text" id="title" name="goal[title]"><br>

        <label for="details">Details: </label>
        <textarea name="goal[details]" id="details"></textarea> <br>

        <label for="private">Private? </label>
        <input type="radio" id="private" name="goal[private]" value="true"> <br>

        <label for="completed">Completed? </label>
        <input type="radio" id="completed" name="goal[completed]" value="true"><br>

        <input type="submit" value="New Goal">
    </form>
</main>